# OsirisCare Central Command - Environment Configuration
# Copy this file to .env and fill in values
# DO NOT COMMIT .env TO VERSION CONTROL
#
# For 1Password integration, run: ./scripts/load-secrets.sh

# =============================================================================
# DATABASE
# =============================================================================
POSTGRES_USER=mcp
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=mcp

# Full connection URL (constructed from above or override directly)
# DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}

# =============================================================================
# REDIS
# =============================================================================
REDIS_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Full connection URL (constructed from above or override directly)
# REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0

# =============================================================================
# MINIO (Object Storage for Evidence)
# =============================================================================
MINIO_ROOT_USER=minio
MINIO_ROOT_PASSWORD=CHANGE_ME_STRONG_PASSWORD
MINIO_ACCESS_KEY=minio
MINIO_SECRET_KEY=CHANGE_ME_STRONG_PASSWORD
MINIO_BUCKET=evidence-worm

# =============================================================================
# LLM API KEYS (for L2 Runbook Selection)
# =============================================================================
# At least one of these should be configured for L2 functionality

# Anthropic (Claude) - Recommended
ANTHROPIC_API_KEY=

# OpenAI (GPT-4)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o

# Azure OpenAI (Enterprise)
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_DEPLOYMENT=gpt-4o
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Which LLM to use (anthropic, openai, azure)
LLM_PROVIDER=anthropic
LLM_MODEL=claude-3-5-sonnet-20241022

# =============================================================================
# EMAIL / SMTP
# =============================================================================
SMTP_HOST=mail.privateemail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=alerts@osiriscare.net
ALERT_EMAIL=administrator@osiriscare.net

# =============================================================================
# ADMIN DASHBOARD
# =============================================================================
# Initial admin password - CHANGE IMMEDIATELY after first login
ADMIN_INITIAL_PASSWORD=CHANGE_ME_ON_FIRST_BOOT

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=300
ORDER_TTL_SECONDS=900

# =============================================================================
# 1PASSWORD INTEGRATION (optional)
# =============================================================================
# Set these to enable automatic secret loading from 1Password
OP_VAULT=OsirisCare
OP_ENVIRONMENT=Production
# Service account token for CI/CD
# OP_SERVICE_ACCOUNT_TOKEN=
